<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="mobile.project.onlinecoursesforstudent">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <application
        android:name=".service.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.OnlineCoursesForStudent">
        <activity android:name=".Menu.DeskripsiTugas"
            android:label="Tugas"></activity>
        <activity android:name=".Menu.BuatTugas" />
        <activity
            android:name=".Menu.DaftarChat"
            android:label="Chat" />
        <activity
            android:name=".Menu.MenuChating"
            android:label="Admin Online Courses" />
        <activity android:name=".Menu.RegisterMenuForAdmin" />
        <activity android:name=".Menu.TambahMatkul" />
        <activity
            android:name=".Menu.SplashScreen"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Menu.EditProfil"
            android:label="Edit Profil" />
        <activity
            android:name=".Menu.MenuUtama"
            android:label="@string/title_activity_menu_utama" />
        <activity android:name=".Menu.Login"
            android:label="Login"/>
        <activity
            android:name=".Menu.RegisterUser"
            android:label="Registrasi" />
        <activity android:name=".Menu.MainActivity" />

        <service android:name=".service.ServiceChannel"
            android:enabled="true"
            android:exported="true">
        </service>
        <service android:name=".service.Tugas"
            android:enabled="true"
            android:exported="true">
        </service>

        <service
            android:name=".service.MyFirebaseMessagingService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>